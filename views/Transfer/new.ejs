<h3>TRANSFER</h3>
<h4>Your accounts</h4>

<div class='row large-up-4'>
  <% balances.forEach(function(info) { %>
    <div class="column column-block">
      <p>
        <span><%= info.type %></span>
        <span>********</span>
        <span><%= info.number %></span>
      </p>
      <p>
        <span>Balance: </span>
        <span>$<%= info.balance %></span>
      </p>
    </div>
  <% }) %>
</div>

<form action="/transfers" method="POST">
  To: <input type="email" name="to"><br>
  Amount: <input type="text" name="amount"><br>
  <input type='submit'>
</form>
